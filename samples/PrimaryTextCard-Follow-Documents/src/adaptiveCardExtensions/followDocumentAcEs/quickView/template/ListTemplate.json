{
    "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "$data": "${followDocuments}",
            "separator": true,
            "columns": [
                {
                    "type": "Column",
                    "width": "25px",
                    "horizontalAlignment": "Center",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${IconUrl}",
                            "width": "25px"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${Title}",
                            "horizontalAlignment": "Left",
                            "size": "Medium"
                        }
                    ],
                    "selectAction": {
                        "type": "Action.OpenUrl",
                        "url": "${WebFileUrl}"
                    }
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "verticalContentAlignment": "Center",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/png;base64,",
                            "width": "25px",
                            "selectAction": {
                                "type": "Action.OpenUrl",
                                "url": "${Folder}",
                                "title": "folder"
                            }
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1416 1254l248 794-640-492-640 492 248-794L0 768h784L1024 0l240 768h784l-632 486z\" ></path></svg>",
                            "width": "25px",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "unfollow",
                                "data": {
                                    "id": "unfollow",
                                    "DriveID": "${DriveId}",
                                    "ItemID": "${ItemId}"
                                }
                            }
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}