{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Input.Text",
                    "placeholder": "Enter your status message",
                    "id": "txtStatusMessage",
                    "isRequired": true,
                    "errorMessage": "Please enter a valid status message",
                    "label": "Status message"
                },
                {
                    "type": "Input.ChoiceSet",
                    "choices": [
                        {
                            "title": "Available",
                            "value": "Available"
                        },
                        {
                            "title": "Busy - Call",
                            "value": "Busy-Call"
                        },
                        {
                            "title": "Busy - Conference call",
                            "value": "Busy-Conf"
                        },
                        {
                            "title": "Away",
                            "value": "Away"
                        },
                        {
                            "title": "DoNotDisturb",
                            "value": "DoNotDisturb"
                        }
                    ],
                    "placeholder": "Select your availability",
                    "id": "cmbAvailability",
                    "isRequired": true,
                    "errorMessage": "Please select your current availability",
                    "separator": true,
                    "label": "Availability",
                    "value": "available",
                    "style": "expanded"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Submit",
                            "style": "positive",
                            "data": {
                                "id": "submit"
                            }
                        },
                        {
                            "type": "Action.Submit",
                            "title": "Cancel",
                            "style": "destructive",
                            "data": {
                                "id": "cancel"
                            }
                        }
                    ],
                    "separator": true,
                    "spacing": "Medium"
                }
            ]
        }
    ]
}