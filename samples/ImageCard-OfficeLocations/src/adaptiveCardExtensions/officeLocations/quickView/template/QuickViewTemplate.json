{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "separator": true,
      "isVisible": "${showSearch}",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.Text",
              "placeholder": "Search...",
              "id": "searchText",
              "value": "${searchText}"
            }
          ]
        },
        {
          "type": "Column",
          "width": "25px",
          "items": [
            {
              "type": "Image",
              "color": "Light",
              "spacing": "Padding",
              "url": "${icons.searchIcon}",
              "width": "20px",
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "id": "Search"
                }
              }
            }
          ],
          "verticalContentAlignment": "Center",
          "style": "default"
        },
        {
          "type": "Column",
          "width": "25px",
          "isVisible": "${showClearSearch}",
          "items": [
            {
              "type": "Image",
              "color": "Light",
              "url": "${icons.clearIcon}",
              "spacing": "Padding",
              "width": "20px",
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "id": "Clear"
                }
              }
            }
          ],
          "verticalContentAlignment": "Center",
          "style": "default"
        }
      ]
    },
    {
      "type": "Container",
      "isVisible": "${showOffices}",
      "separator": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "20px",
              "isVisible": "${showNavigationButtons}",
              "items": [
                {
                  "type": "Image",
                  "color": "Light",
                  "url": "${icons.previousIcon}",
                  "selectAction": {
                    "type": "Action.Submit",
                    "title": "Previous",
                    "data": {
                      "id": "previous"
                    }
                  }
                }
              ],
              "verticalContentAlignment": "Center",
              "style": "default"
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${office.name}",
                  "weight": "Bolder",
                  "wrap": true,
                  "size": "Large",
                  "horizontalAlignment": "Center"
                },
                {
                  "type": "TextBlock",
                  "isVisible": "${showTime}",
                  "horizontalAlignment": "Center",
                  "verticalContentAlignment": "Center",
                  "text": "${office.time}",
                  "wrap": true,
                  "size": "Medium"
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "20px",
              "isVisible": "${showNavigationButtons}",
              "items": [
                {
                  "type": "Image",
                  "url": "${icons.nextIcon}",
                  "selectAction": {
                    "type": "Action.Submit",
                    "title": "Next",
                    "data": {
                      "id": "next"
                    }
                  }
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        },
        {
          "type": "Image",
          "url": "${office.locationMap.imageUrl}",
          "altText": "${office.locationMap.imageAlt}",
          "separator": true,
          "isVisible": "${showMapsInQuickView}",
          "height": "205.8px"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "text": "${office.address}",
          "spacing": "Padding",
          "separator": true,
          "wrap": true,
          "horizontalAlignment": "Center"
        },
        {
          "type": "ActionSet",
          "isVisible": "${showOpenMapsButton}",
          "separator": true,
          "actions": [
            {
              "type": "VivaAction.ShowLocation",
              "title": "Open in maps",
              "style": "positive",
              "id": "ShowLocation",
              "parameters": {
                "locationCoordinates": {
                  "latitude": "${office.latitude}",
                  "longitude": "${office.longitude}"
                }
              }
            }
          ]
        },
        {
          "type": "ActionSet",
          "isVisible": "${office.locationMap.directionUrl != '#'}",
          "separator": true,
          "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "Get directions",
              "style": "positive",
              "url": "${office.locationMap.directionUrl}",
              "tooltip": "Open directions in maps"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "separator": true,
          "isVisible": "${showWeather}",
          "style": "accent",
          "minHeight": "100px",
          "columns": [
            {
              "type": "Column",
              "width": 20,
              "items": [
                {
                  "type": "ColumnSet",
                  "spacing": "none",
                  "isVisible": "${office.gotWeather && office.weather != null}",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "Image",
                          "url": "${office.weather.icon}",
                          "size": "Small"
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    },
                    {
                      "type": "Column",
                      "width": "stretch",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "${office.weather.temperature}°C",
                          "size": "ExtraLarge",
                          "spacing": "None",
                          "wrap": true
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "High ${office.weather.high}°C",
                          "horizontalAlignment": "Left",
                          "wrap": true
                        },
                        {
                          "type": "TextBlock",
                          "text": "Low  ${office.weather.low}°C",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "wrap": true
                        },
                        {
                          "type": "TextBlock",
                          "text": "Wind ${office.weather.windSpeed}",
                          "horizontalAlignment": "Left",
                          "spacing": "None",
                          "wrap": true
                        }
                      ],
                      "verticalContentAlignment": "Center"
                    }
                  ]
                },
                {
                  "type": "Image",
                  "url": "${loadingImage}",
                  "altText": "Loading...",
                  "isVisible": "${!office.gotWeather}",
                  "horizontalAlignment": "Center",
                  "width": "50px"
                },
                {
                  "type": "TextBlock",
                  "size": "Medium",
                  "isVisible": "${office.gotWeather && office.weather == null}",
                  "text": "No weather data available",
                  "spacing": "none",
                  "separator": true,
                  "wrap": true,
                  "horizontalAlignment": "Center"
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "isVisible": "${!showOffices}",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "No results found",
          "spacing": "Padding",
          "separator": true,
          "wrap": true,
          "horizontalAlignment": "Center"
        }
      ]
    }
  ]
}