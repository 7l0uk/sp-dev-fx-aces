{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "$data": "${services}",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "minHeight": "30px",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "Image",
              "url": "${serviceIcon}",
              "size": "Small"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${name}",
              "horizontalAlignment": "Left",
              "size": "Large",
              "spacing": "medium",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${numberOfIssues}",
              "horizontalAlignment": "Left",
              "spacing": "None",
              "size": "medium",
              "isSubtle": true,
              "color": "warning",
              "wrap": true
            }
          ]
        },
        {
          "type": "Column",
          "width": "50px",
          "minHeight": "30px",
          "separator": true,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "ActionSet",
              "horizontalAlignment": "center",
              "actions": [
                {
                  "type": "Action.Submit",
                  "iconUrl": "${actionIcon}",
                  "style":"positive",
                  "data": {
                    "service": "${name}",
                    "action": "click"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}