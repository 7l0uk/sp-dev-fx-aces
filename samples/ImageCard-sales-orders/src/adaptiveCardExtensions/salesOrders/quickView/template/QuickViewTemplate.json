{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "Input.Text",
                          "placeholder": "Search",
                          "id": "input",
                          "inlineAction": {
                              "type": "Action.Submit",
                              "iconUrl": "data:image/png;base64,",
                              "associatedInputs": "auto",
                              "id": "search"
                          }
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                      {
                          "type": "ActionSet",
                          "actions": [
                              {
                                  "type": "Action.Submit",
                                  "title": "${refreshLabel}",
                                  "iconUrl": "data:image/png;base64,",
                                  "id": "refresh"
                              }
                          ]
                      }
                  ]
              }
          ]
      },
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": "80px",
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "Customer",
                          "wrap": true,
                          "color": "Accent",
                          "weight": "Bolder"
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "Order",
                          "wrap": true,
                          "color": "Accent",
                          "weight": "Bolder",
                          "height": "stretch"
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "Date",
                          "wrap": true,
                          "color": "Accent",
                          "weight": "Bolder"
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": "80px",
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "Status",
                          "wrap": true,
                          "color": "Accent",
                          "weight": "Bolder"
                      }
                  ]
              }
          ],
          "separator": true,
          "style": "accent",
          "spacing": "Medium"
      },
      {
          "type": "Container",
          "items": [
              {
                  "type": "Container",
                  "items": [
                      {
                          "type": "ColumnSet",
                          "columns": [
                              {
                                  "type": "Column",
                                  "items": [
                                      {
                                          "type": "TextBlock",
                                          "weight": "Bolder",
                                          "text": "${customer}",
                                          "height": "stretch",
                                          "wrap": true,
                                          "color": "Default",
                                          "isSubtle": false,
                                          "size": "Default"
                                      }
                                  ],
                                  "width": "stretch",
                                  "height": "stretch"
                              },
                              {
                                  "type": "Column",
                                  "width": "stretch",
                                  "items": [
                                      {
                                          "type": "TextBlock",
                                          "text": "${order}",
                                          "wrap": true
                                      }
                                  ],
                                  "height": "stretch"
                              },
                              {
                                  "type": "Column",
                                  "width": "stretch",
                                  "items": [
                                      {
                                          "type": "TextBlock",
                                          "text": "${orderDate}",
                                          "height": "stretch",
                                          "wrap": true
                                      }
                                  ],
                                  "height": "stretch"
                              },
                              {
                                  "type": "Column",
                                  "width": "80px",
                                  "items": [
                                      {
                                          "type": "TextBlock",
                                          "text": "${status}",
                                          "wrap": true,
                                          "height": "stretch",
                                          "color": "Good",
                                          "weight": "Bolder"
                                      }
                                  ],
                                  "height": "stretch"
                              }
                          ]
                      }
                  ],
                  "style": "emphasis",
                  "separator": true,
                  "spacing": "Small"
              }
          ],
          "$data": "${orders}"
      }
  ],
  "minHeight": "400px"
}
