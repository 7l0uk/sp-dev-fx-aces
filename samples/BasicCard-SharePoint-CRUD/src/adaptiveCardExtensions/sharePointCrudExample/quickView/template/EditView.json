{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [{
    "type": "Container",
    "separator": true,
    "items": [{
        "type": "TextBlock",
        "text": "Title",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      },
      {
        "type": "Input.Text",
        "id": "title",
        "placeholder": "Title",
        "isMultiline": false,
        "value": "${item.title}"
      },
      {
        "type": "TextBlock",
        "text": "Multi-Line Text",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.Text",
        "id": "multilinetext",
        "placeholder": "Multi-Line Text",
        "height": "stretch",
        "isMultiline": true,
        "wrap": true,
        "value": "${item.multilinetext}"
      },
      {
        "type": "TextBlock",
        "text": "Choice Field DDL",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.ChoiceSet",
        "id": "choicefieldddl",
        "value": "{item.choicefieldddl}",
        "choices": [{
          "$data": "${choiceFieldDDLValues}",
          "title": "${choice}",
          "value": "${value}"
        }]
      },
      {
        "type": "TextBlock",
        "text": "Choice Field Radio",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.ChoiceSet",
        "id": "choicefieldradio",
        "style": "expanded",
        "value": "${item.choicefieldradio}",
        "choices": [{
          "$data": "${choiceFieldRadioValues}",
          "title": "${choice}",
          "value": "${value}"
        }]
      },
      {
        "type": "TextBlock",
        "text": "Choice Field Checkbox",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      },
      {
        "type": "Input.ChoiceSet",
        "id": "choicefieldcheckbox",
        "isMultiSelect": true,
        "value": "${item.choicefieldcheckbox}",
        "choices": [{
          "$data": "${choiceFieldCheckboxValues}",
          "title": "${choice}",
          "value": "${value}"
        }]
      },
      {
        "type": "TextBlock",
        "text": "Number Field",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.Number",
        "id": "numberfield",
        "value": "${item.numberfield}"
      },
      {
        "type": "TextBlock",
        "text": "Currency Field",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.Number",
        "id": "currencyfield",
        "value": "${item.currencyfield}"
      }, {
        "type": "TextBlock",
        "text": "Yes/No Field",
        "weight": "Bolder",
        "wrap": true,
        "style": "heading"
      }, {
        "type": "Input.Toggle",
        "title": "Yes/No",
        "id": "yesnofield",
        "value": "${item.yesnofield}"
      }, {
        "type": "ActionSet",
        "actions": [{
          "type": "Action.Submit",
          "title": "Save Updates",
          "data": {
            "id": "update",
            "itemId": "${id}"
          }
        }]
      }
    ]
  }]
}