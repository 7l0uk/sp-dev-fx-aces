{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "weight": "Bolder",
            "text": "${title}"
        },
        {
            "type": "Image",
            "url": "${loadingImage}",
            "width": "50px",
            "size": "small"
        }
    ]
}