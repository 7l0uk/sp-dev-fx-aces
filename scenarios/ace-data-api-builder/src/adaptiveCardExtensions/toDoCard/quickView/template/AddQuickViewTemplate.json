{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.Text",
          "id": "title",
          "label": "Title",
          "isRequired": true,
          "errorMessage": "Required field",
          "placeholder": "${taskTitlePlaceholder}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Add ToDo"
    }
  ]
}